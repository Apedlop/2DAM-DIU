<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<AnchorPane stylesheets="@styles/styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gestionhotel.controller.VPController">
    <children>
        <!-- SplitPane para dividir en dos paneles -->
        <SplitPane dividerPositions="0.4" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <!-- Panel de la tabla de clientes -->
                <AnchorPane>
                    <children>
                        <TableView fx:id="tablaClientes" layoutY="35.0" prefHeight="225.0" prefWidth="227.0" AnchorPane.bottomAnchor="38.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="35.0">
                            <columns>
                                <TableColumn fx:id="columnaNombre" prefWidth="143.0" text="Nombre" />
                                <TableColumn fx:id="columnaApellido" prefWidth="151.0" text="Apellido" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>

                        <!-- Botones de acción (Nuevo, Editar, Eliminar) -->
                        <HBox alignment="CENTER_RIGHT" layoutX="8.0" layoutY="260.0" spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="8.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#botonNuevoCliente" text="Nuevo" />
                                <Button mnemonicParsing="false" onAction="#botonEditarCliente" text="Editar" />
                                <Button mnemonicParsing="false" onAction="#botonEliminarCliente" text="Eliminar" />
                            </children>
                        </HBox>

                        <!-- Barra de búsqueda por DNI -->
                        <HBox prefHeight="29.0" prefWidth="217.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
                            <children>
                                <Label text="ID:">
                                    <HBox.margin>
                                        <Insets left="10.0" right="5.0" />
                                    </HBox.margin>
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="buscarDni" minHeight="23.0" onAction="#busquedaDni" prefHeight="0.0" prefWidth="157.0" />
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>

                <!-- Panel de detalles del cliente -->
                <AnchorPane>
                    <children>
                        <Label layoutX="61.0" layoutY="8.0" styleClass="label-header" text="Detalles Personales" AnchorPane.leftAnchor="61.0" AnchorPane.topAnchor="8.0">
                            <font>
                                <Font name="System Bold" size="25.0" />
                            </font>
                        </Label>

                        <!-- Grid para detalles -->
                        <GridPane layoutX="9.0" layoutY="59.0" AnchorPane.leftAnchor="9.0" AnchorPane.rightAnchor="1.0" AnchorPane.topAnchor="59.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                            </rowConstraints>
                            <children>
                                <Label text="Direccion" GridPane.rowIndex="3" />
                                <Label fx:id="localidad" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                <Label fx:id="direccion" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <Label text="Provincia" GridPane.rowIndex="5" />
                                <Label text="Localidad" GridPane.rowIndex="4" />
                                <Label fx:id="apellido" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label fx:id="nombre" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Apellido" GridPane.rowIndex="2" />
                                <Label text="Nombre" GridPane.rowIndex="1" />
                                <Label fx:id="provincia" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                <Label text="DNI" />
                                <Label fx:id="dni" text="Label" GridPane.columnIndex="1" />
                            </children>
                        </GridPane>

                        <!-- Botón para ver reserva -->
                        <Button layoutX="267.0" layoutY="261.0" mnemonicParsing="false" onAction="#botonVerReserva" text="Ver Reserva" />
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
